        //return;
    }
    
    public boolean isMandatoryDataFilled() {
        boolean mandatoryDataFilled = true;
        if (this.getFrom() == null
                || this.getRecipients() == null
                || this.getSubject() == null
                || this.getBody() == null
                ) {
            mandatoryDataFilled = false;
        }
        return mandatoryDataFilled;
    }
    
