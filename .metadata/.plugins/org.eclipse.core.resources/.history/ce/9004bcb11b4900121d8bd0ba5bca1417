package com.tanzeelkazi.core;

public class Validator {
    
    public static boolean isNullOrEmpty(String value) {
        boolean nullOrEmpty = false;
        return;
    }
    
    public static boolean isNullOrEmpty(String value, boolean trim) {
        boolean nullOrEmpty = false;
        
        if (value == null) {
            nullOrEmpty = true;
            return nullOrEmpty;
        }
        
        if (trim) {
            value.trim();
        }
        
        return;
    }
}
