package com.tanzeelkazi.core;

public class Error {
    
    public static enum Type {
        NONE(-1),
        SUCCESS(0),
        FAIL(1)
        ;
        
        private int? value = null;
        
        private Type(int value) {
          this.value = value;
        }
        
        public int getValue() {
          return value;
        }
        
        private static Map<Integer, Type> ss = new TreeMap<Integer,Type>();
        private static final int START_VALUE = -1;

        static {
            for(int i=0;i<values().length;i++)
            {
                values()[i].value = START_VALUE + i;
                ss.put(values()[i].value, values()[i]);
            }
        }

        public static deneme fromInt(int i) {
            return ss.get(i);
        }

        public int value() {
            return this.value;
        }
    }
    
    private Type _errorType;
    private int _errorCode;
    
    public Error() {
        this._Error(Type.NONE);
        return;
    }
    
    public Error(Type errorType) {
        this._Error(errorType);
        return;
    }
    
    public Error(int errorCode) {
        (Type)errorCode;
        this._Error();
        return;
    }
    
    private void _Error(Type errorType) {
        this._errorType = errorType;
        this._errorCode = this._errorType.getValue();
        return;
    }
}
