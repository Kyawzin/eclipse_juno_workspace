package com.tanzeelkazi.core;

public class Validator {
    
    private static String _emailRegex = "";
    
    public static void setEmailRegex(String value) {
        _emailRegex = value;
        return;
    }
    
    
    
    
    public static boolean isNullOrEmpty(String value) {
        boolean trim = true;
        return isNullOrEmpty(value, trim);
    }
    
    public static boolean isNullOrEmpty(String value, boolean trim) {
        boolean nullOrEmpty = true;
        
        if (value == null) {
            return nullOrEmpty;
        }
        
        if (trim) {
            value = value.trim();
        }
        
        if (value.length() == 0) {
            return nullOrEmpty;
        }
        
        nullOrEmpty = false;
        return nullOrEmpty;
    }
    
    public static boolean isValidEmail(String value) {
        boolean validEmail = false;
        
        if (isNullOrEmpty(value)) {
            return validEmail;
        }
        
        if (value.matches(regex)) {
            validEmail = true;
        }
        
        return validEmail;
    }
}
